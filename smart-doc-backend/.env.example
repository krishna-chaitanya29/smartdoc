# Application Configuration
SPRING_APPLICATION_NAME=smart-doc-backend
SERVER_PORT=8080

# File Upload Limits
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# Database Configuration (TiDB)
SPRING_DATASOURCE_URL=jdbc:mysql://your-host:4000/your-database?sslMode=VERIFY_IDENTITY&useSSL=true
SPRING_DATASOURCE_USERNAME=your-username
SPRING_DATASOURCE_PASSWORD=your-password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# JPA (Hibernate Configuration)
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.MySQLDialect

# AI Service URL
AI_SERVICE_URL=https://your-ai-service-url
